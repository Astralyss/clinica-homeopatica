generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id                 Int      @id @default(autoincrement())
  id_producto        String   @unique @map("id_producto") // CÃ³digo de barras
  nombre             String
  categoria          String
  precio             Decimal  @db.Decimal(10,2)
  presentacion       String
  descripcion        String?
  beneficios         String[]
  cantidad           Int      @default(0) // Cantidad en inventario
  esPrincipal        Boolean  @default(false) @map("es_principal") // Para mostrar en landing
  fechaCreacion      DateTime @default(now()) @map("fecha_creacion")
  fechaActualizacion DateTime @updatedAt @map("fecha_actualizacion")
  activo             Boolean  @default(true)
  imagenes           ImagenProducto[]
}

model ImagenProducto {
  id         Int      @id @default(autoincrement())
  url        String
  esPrincipal Boolean @default(false)
  producto   Producto @relation(fields: [productoId], references: [id])
  productoId Int
}
